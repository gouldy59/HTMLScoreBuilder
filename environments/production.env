# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Production Database (Production Neon instance)
DATABASE_URL=postgresql://prod_user:prod_password@prod-host:5432/score_reports_prod

# Production Settings
DEBUG=false
LOG_LEVEL=error
ENABLE_HOT_RELOAD=false

# Production Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PDF_EXPORT=true
ENABLE_IMAGE_EXPORT=true
ENABLE_DEBUG_TOOLBAR=false

# Production Security (Strict)
SESSION_SECRET=production-session-secret-CHANGE-THIS-TO-RANDOM-STRING
CORS_ORIGIN=https://yourapp.com

# Production External Services
# SMTP_HOST=smtp.yourapp.com
# SMTP_PORT=587
# SENTRY_DSN=https://your-production-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXX

# Production Monitoring
# HEALTH_CHECK_INTERVAL=30000
# METRICS_ENABLED=true