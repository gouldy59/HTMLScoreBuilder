# Staging Environment Configuration
NODE_ENV=staging
PORT=5000

# Staging Database (Production-like Neon instance)
DATABASE_URL=postgresql://staging_user:staging_password@staging-host:5432/score_reports_staging

# Staging Settings
DEBUG=false
LOG_LEVEL=warn
ENABLE_HOT_RELOAD=false

# Staging Feature Flags (Production-like)
ENABLE_ANALYTICS=true
ENABLE_PDF_EXPORT=true
ENABLE_IMAGE_EXPORT=true
ENABLE_DEBUG_TOOLBAR=false

# Staging Security (Production-like)
SESSION_SECRET=staging-session-secret-change-this
CORS_ORIGIN=https://staging.yourapp.com

# Staging External Services (Production-like)
# SMTP_HOST=smtp.yourapp.com
# SMTP_PORT=587
# SENTRY_DSN=https://your-staging-sentry-dsn